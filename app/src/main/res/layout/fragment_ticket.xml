                <!--android:layout_height="match_parent"-->
                <!--android:layout_margin="6dp"-->
                <!--android:divider="@color/ticket_li"/>-->
        <!--</LinearLayout>-->
    </android.support.v7.widget.CardView>

</LinearLayout>
